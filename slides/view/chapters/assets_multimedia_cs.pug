include ../mixins/containers.pug
include ../mixins/containers_aph.pug

- var imgAssets = '../assets/assets_multimedia/';
- var defaultBgr = 'backgrounds/mesh.jpg';

+mchapter('Multimediální assety', imgAssets+'chapter_assets_multimedia.svg')
+frameInbox('Hudební formáty')
	.important-green
		.flex-cols-2
			div.spacing-4xs
				.scope.mt-5.fragment.fade-up
					p AIFF
					ul
						li Audio Interchange File Format
						li nekomprimovaná pulzně-kódovaná modulace
						li může obsahovat smyčky a samply
				.scope.mt-5.fragment.fade-up
					p WAV
					ul
						li lineární pulzně-kódovaná modulace
						li používá se, když není čas čekat na dekompresi (krátké zvuky)
				.scope.mt-5.fragment.fade-up
					p MP3
					ul
						li MPEG-1 Audio Layer III
						li ztrátová komprese
				.scope.mt-5.fragment.fade-up
					p OGG
					ul
						li pokročilejší a lepší poměr kvalita/komprese než MP3
						li open-source (na rozdíl od MP3)
			div.text-center
				img.height-420.mt-80(src=imgAssets+'assets_music.svg' alt='Music assets')
+frameInbox('Obrázkové formáty')
	.important-orange
		.flex-cols-2.spacing-3xs
			div
				.scope.fragment(data-fragment-index="1")
					p JPEG
					ul
						li Joint Photographic Experts Group
						li pro digitální fotografii
						li nepodporuje alfa kanál
						li.color-tomato-light nepoužívat pro pixel-art
				.scope.fragment(data-fragment-index="2")
					p PNG
					ul
						li Portable Network Graphics
						li dobré výsledky u jednoduchých obrázků (pixel-art a vektory)
				.scope.fragment(data-fragment-index="3")
					p TGA
					ul
						li Truevision TGA
						li starší formát pro textury
				.scope.fragment(data-fragment-index="4")
					p SVG
					ul
						li Scalable Vector Graphics
						li formát pro vektorové obrázky
			div.text-center
				div.fragment(data-fragment-index="1")
					img.height-300.mt-20(src=imgAssets+'assets_images_jpg.jpg' alt='JPG image')
				div.fragment(data-fragment-index="2")
					img.height-300.mt-20(src=imgAssets+'assets_images_png.png' alt='PNG image')
				div.fragment(data-fragment-index="4")
					img.height-100.mt-20(src=imgAssets+'assets_images_svg.svg' alt='SVG image')
+frameInbox('Videa a cutscény')
	.important-orange
		.flex-cols-2
			div
				ul
					li.fragment čím progresivnější hra, tím více cutscén
					li.fragment <span class="highlight-2">a) plně progresivní</span> - video, in-game statické cutscény
					li.fragment <span class="highlight-2">b) částečně progresivní</span> - např. skinovatelný avatar ve scéně
					li.fragment <span class="highlight-2">c) částečně emergentní</span> - hráč se může pohybovat, ale nemůže do scény zasahovat
					li.fragment <span class="highlight-2">d) plně emergentní</span> - generovaná cutscéna
					li.mt-30.fragment <span class="highlight">1980</span> - in-game cutscény
					li.fragment <span class="highlight">1990</span> - předrenderované cutscény
					li.fragment <span class="highlight">2000</span> - in-game cutscény
					li.fragment <span class="highlight">2010</span> - předrenderované cutscény
					li.fragment <span class="highlight">2020</span> - in-game cutscény
			div.text-center
				img.width-700(src=imgAssets+'cutscene_w3.jpg' alt='Warcraft cutscene')
				img.width-700(src=imgAssets+'cutscene_hellblade.jpg' alt='Hellblade cutscene')
		.tip.fragment.left-550.bottom-100
			img.height-600(src=globalAssets+'memes/cutscenes2.jpg')
+frameInbox('Videa a cutscény')
	div
		.flex-cols-2.mt-20
			figure.fragment
				img.width-600(src=imgAssets+'cut_ingame_another.jpg' alt='Another World cutscene')
				p Another World (1991), in-game
			figure.fragment
				img.width-600(src=imgAssets+'cut_ingame_lastofus.jpg' alt='The Last of us, Part I')
				p The Last of Us, Part I (2022), in-game
		.flex-cols-2.mt-20
			figure.fragment
				img.width-600(src=imgAssets+'w3_cutscene.jpg' alt='Warcraft cutscene')
				p Warcraft 3, in-game and cinematics
			figure.fragment
				img.width-600(src=imgAssets+'w3_reforged_cutscene.jpg' alt='Warcraft reforged cutscene')
				p Warcraft 3 Reforged, cinematics
+frameInbox('Textury')
	.important-orange
		.flex-cols-2.spacing-2xs
			div
				ul
					li.fragment(data-fragment-index="1") bitmapa, která je vykreslená na objekt ve scéně
					li.highlight-2.fragment(data-fragment-index="2") textury se obvykle konvertují do formátů, které jsou specifické pro dané grafické API
				.scope.fragment(data-fragment-index="3")
					p Typy
					ul
						li.fragment(data-fragment-index="4") difúzní textura
						li.fragment(data-fragment-index="5") displacement textura
						li.fragment(data-fragment-index="6") normálová textura
						li.fragment(data-fragment-index="7") volumetrická textura
						li.fragment(data-fragment-index="8") dlaždicová (tile) textura
						li.fragment(data-fragment-index="9") sprite atlas
				.scope.fragment(data-fragment-index="10")
					p Formáty
					ul
						li Desktop: BC6H, BC7, DXT1, DXT5
						li iOS: ATSC, PVRTC
						li Android: ASTC
			.grid.grid-cols-2
				div
					figure.fragment(data-fragment-index="4")
						img.height-210(src=imgAssets+'texture_color.jpg' alt='Color texture')
						p Difúzní
					figure.fragment(data-fragment-index="5")
						img.height-210(src=imgAssets+'texture_displacement.jpg' alt='Displacement texture')
						p Displacement
					figure.fragment(data-fragment-index="6")
						img.height-210(src=imgAssets+'texture_normal.jpg' alt='Normal texture')
						p Normálová
				div
					figure.fragment(data-fragment-index="7")
						img.height-210(src=imgAssets+'texture_volumetric.jpg' alt='Volumetric texture')
						p Volumetrická
					figure.fragment(data-fragment-index="8")
						img.height-210(src=imgAssets+'texture_tileable.jpg' alt='Tileable texture')
						p Dlaždicová
					figure.fragment(data-fragment-index="9")
						img.height-210(src=imgAssets+'spriteanim.gif' alt='Sprite animation')
						p Sprite atlas
+frameInbox('Sprity')
	.important-orange
		.spacing-2xs
			.scope.fragment.fade-up
				p Sprite
				ul
					li textura pro dynamický objekt
					li obvykle reprezentuje animované postavičky
					li engine umožňuje hýbat s každým spritem nezávisle na sobě 
				.top-0.right-40
					img.height-370(src=imgAssets+'braid.png' alt='Braid spritesheet')
			.scope.fragment.fade-up
				p Spritesheet
				ul
					li množina souvisejících spritů
			.scope.fragment.fade-up
				p Sprite atlas
				ul
					li obrázkový soubor, který obsahuje spritesheety
			.scope.fragment.fade-up
				p Billboard
				ul
					li textura, která je vždy natočená ke kameře
					li na rozdíl od spritů se objevuje i ve 3D hrách
				.top-0.right-40
					img.height-310(src=imgAssets+'billboard.jpg' )
