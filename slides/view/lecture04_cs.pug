			include ./chapters/components_objects_cs.pug
			include ./chapters/components_components_cs.pug
			include ./chapters/components_messaging_cs.pug
			include ./chapters/components_engines_cs.pug
			- var defaultBgr = 'backgrounds/bgr_arcades2.jpg';
			+summary_lecture04cs()
			+quote-primalex()

	+footer('Adam Vesecký (FIT ČVUT)', 'Architektura Počítačových Her, Přednáška 4: Komponenty')
	script(src!='../../scripts/reveal-setup.js')
