doctype html
include ./mixins/header.pug
include ./mixins/containers.pug
include ./mixins/containers_aph.pug
include ./mixins/title.pug
include ./mixins/quotes.pug
include ./mixins/summary.pug

- var themePath = '../themes/aph/';
- var globalAssets = '../assets/all/';
- var defaultBgr = 'backgrounds/bgr_arcades2.jpg';

html(lang='en')
	+header('Game AI', 'Adam Vesecký', themePath + 'resources/favicon.png', themePath + 'theme_aph.scss')

	.reveal
		.slides
			+titleLecture('Game AI', 'Lecture 10', globalAssets+'lectures/ic_lecture10.svg')
			+frameInbox('Literature')
				ul
					li
						a(href="https://www.amazon.com/Programming-Example-Wordware-Developers-Library/dp/1556220782") Buckland, Mat. 2005. Programming Game AI by Example
					li
						a(href="https://www.pearson.com/store/p/artificial-intelligence-a-modern-approach/P100000291856/9780134610993") Russell, Stuart. 2020. Artificial Intelligence: A Modern Approach (4th ed.)
				.flex-cols-2
					div.text-center
						img.height-500(src=globalAssets+'book_ai_by_example.jpg' alt='Buckland, Mat. Programming Game AI by Example')
					div.text-center
						img.height-500(src=globalAssets+'book_ai_modern_approach.jpg' alt='Russell, Stuart. Artificial Intelligence: A Modern Approach (4th ed.)')
			include ./chapters/gameai_introduction.pug
			include ./chapters/gameai_mobs.pug
			include ./chapters/gameai_navigation.pug
			include ./chapters/gameai_real.pug
			include ./chapters/gameai_strategies.pug
			+summary_lecture10()
			+quote-zelda()

	+footer('Adam Vesecký (FIT CTU)', 'Architecture of Computer Games, Lecture 10: Game AI')
	script(src!='../../scripts/reveal-setup.js')