mixin summary()
	+mcontainer()&attributes(attributes)
		div(class!='frame inbox ' + (attributes.class ? attributes.class : ''))
			h3.slide-title.color-manhattan Lecture Summary
			.bottom-0.right-0
				img.height-300(src=globalAssets+'keen_summary.png')
			.important-orange
				block

